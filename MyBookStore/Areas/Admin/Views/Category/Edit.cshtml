@model Category

<div class="h-100 d-flex justify-content-center align-content-center">
    <div class="col-12 col-lg-8 card shadow border-0 mt-4">
        <div class="card-header border-0 px-4">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-primary">Edit Category</h2>
                </div>
            </div>
        </div>
        <div class="card-body px-4">
            <form method="post" class="row">
                <div class="px-3">
                    @* <div asp-validation-summary="ModelOnly"></div> *@
                    <div class="form-floating col-12 pb-3">
                        <input asp-for="Name" class="form-control" placeholder />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-12 pb-3">
                        <input asp-for="DisplayOrder" class="form-control" placeholder />
                        <label asp-for="DisplayOrder"></label>
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary rounded form-control">Update</button>
                        </div>
                        <div class="col-6 col-md-4 col-lg-3">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary rounded border form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}