@model List<Category>

@{
    ViewData["Title"] = "Category List";
}

<div class="container my-5">
    <div class="d-flex flex-column flex-md-row pb-3">
        <div class="col-md-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="d-flex d-md-none w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary rounded mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger rounded mx-2">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                        <div class="d-none d-md-flex w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary rounded mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger rounded mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>